                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password" placeholder="Password">
                            </div>
                        </div> -->
                        <div class="form-group">
                            <!-- Button -->                                       
                            <div class="col-md-offset-3 col-md-9">
                                <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Register</button>
                            </div>
                        </div>  
                    </form>
                 </div>
            </div>
            <div>
                <h3>輸入ID</h3>

                <div class="form-group">
                  <label for="InputId_num">ID</label>
                  <input id="InputId_num" name="InputId_num" />

             
                <div>
                   <button type="button" onclick="check()" class="btn btn-success"><i class="glyphicon glyphicon-ok-circle"> 查詢</i></button>
                 </div>
                 <div id='image'>
                     
                 </div>
            </div>
        </div>
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    function check() {

        var check = {
            
            checkmem: $('#InputId_num').val()
            
        }
           console.log(check)
        $.ajax({
            type: 'post',
            url: '/accounts/id',
            data: check

        }).done(function (result) {
            console.log(result)
            var image = '<img src="/images/upload_images/'+result[0]['url']+'">'
            $('#image').html(image)





        }).fail(function (err) {

            console.log(err.statusText)
        })
    }
    
</script>


  
</html>